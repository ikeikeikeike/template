# Gunicorn config file

# What ports/sockets to listen on, and what options for them.
bind = "0.0.0.0:<%= @app_node[:web_port] %>"

# The maximum number of pending connections
backlog = 2048

# What the timeout for killing busy workers is, in seconds
timeout = 60

# How long to wait for requests on a Keep-Alive connection, in seconds
keepalive = 2

# The maxium number of requests a worker will process before restarting
max_requests = 0

# Whether the app should be pre-loaded
preload_app = False

# How many worker processes
workers = 2

# The Access log file to write to.
accesslog = "<%= @app_dir %>/log/gunicorn_access.log"

# The Error log file to write to.
errorlog = "<%= @app_dir %>/log/gunicorn_error.log"

# A base to use with setproctitle for process naming.
proc_name = "<%= @app_id %>"

# The Python path to a Django settings module.
django_settings = "project.settings"
